<tr><td class="icon"></td><td class="skill_name"><%= skill.name %><% if user.skill_score(skill) > 1 %><sup><%= user.skill_score(skill) %><% end %></sup></td></tr>

<li>
  <div class="skill_box <%= skill.name %>_box">
    <span class="icon"></span>
      <div class="skill_name">
        <%= skill.name %><% if user.skill_score(skill) > 1 %><sup><%= user.skill_score(skill) %></sup><% end %>
          <% if skill.endorsable?(current_user, user, project) %>
            <%= button_to "+", {controller: "user_projects", action: "update", user_id: user.id, project_id: project.id, skill_id: skill.id}, method: :post, class: "endorse_button" %>
          <% end %>
    </div>
  </div>
</li>

for show page:

        <ul>
          <%= render partial: 'skills/skill', collection: @user.skills, locals: {user: @user, project: nil} %>
        </ul>