<!DOCTYPE html>
<html>
<head>
  <title>ProjectFinder</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= analytics_init if Rails.env.production? %>
</head>
<body>

<%= render 'layouts/header' %>

<% if notice %>
  <p class="alert alert-success col-sm-offset-3 col-md-8"><%= notice %></p>
<% end %>
<% if flash[:message] %>
  <% flash[:message].each do |message| %>
    <p class="alert alert-success col-sm-offset-3 col-md-8"><%= message[:content] %>
    <% if message[:project] %>
      <%= link_to message[:project].title, message[:project] %>
    <% end %></p>
  <% end %>
<% end %>
<% if alert %>
  <p class="alert alert-danger col-sm-offset-3 col-md-8"><%= alert %></p>
<% end %>

<%= yield %>

</body>
</html>